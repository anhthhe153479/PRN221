<UserControl x:Class="ProjectQLBH.QLSuplier"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:ProjectQLBH"
       mc:Ignorable="d"
        Height="800"
        Width="1100"
        DataContext="{StaticResource EventVM}"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6.9*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!--Tiêu đề-->
        <Label Content="SỰ KIỆN KHUYẾN MÃI" Grid.ColumnSpan="2"
               FontFamily="Sitka Subheading"
               Height="25"
               FontSize="22"
               Padding="0"
               FontWeight="Bold"
               VerticalAlignment="Top"
               Name="Title"
               HorizontalAlignment="Center"/>

        <!--Danh sách sự kiện-->
        <ListView Name="listEvent" Grid.ColumnSpan="2"  ItemsSource="{Binding ListEvent}" SelectedItem="{Binding EventItem,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                  FontFamily="Sitka Subheading"
                  FontSize="13"
                  Margin="200,73,0,220"
                  Foreground="Black"
                  HorizontalAlignment="Left" Grid.RowSpan="3"
                  >

            <!--Nếu dài quá thì hiển thị...-->
            <ListView.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=Text}"/>
                </Style>
                <Style TargetType="{x:Type ScrollBar}">
                    <Setter Property="Margin" Value="2,90,0,8" />
                    <Setter Property="Stylus.IsFlicksEnabled" Value="false" />
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ScrollBar}">
                                <Track IsDirectionReversed="true" Focusable="false">
                                    <Track.Thumb>
                                        <Thumb Width="8" Background="Green"/>
                                    </Track.Thumb>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton Command="ScrollBar.PageDownCommand" Opacity="0" Focusable="false" />
                                    </Track.IncreaseRepeatButton>
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton Command="ScrollBar.PageUpCommand" Opacity="0" Focusable="false" />
                                    </Track.DecreaseRepeatButton>
                                </Track>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.Resources>

            <!--Thiết kế các cột-->
            <ListView.View>
                <GridView>
                    <!--Cột Ngày bắt đầu-->
                    <GridViewColumn
                        Width="155"
                        DisplayMemberBinding="{Binding DateBegin,StringFormat='MM-dd-yyyy'}">
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <Border>
                                    <Border.Effect>
                                        <DropShadowEffect
                                            Color="White"
                                            Direction="270"
                                            ShadowDepth="1"
                                            BlurRadius="5"/>
                                    </Border.Effect>
                                    <Label Content="Ngày bắt đầu"
                                       Padding="1"
                                       FontSize="15"
                                       Foreground="Black"
                                       FontWeight="Bold"/>
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                    </GridViewColumn>
                    <!--Cột Ngày kết thúc-->
                    <GridViewColumn
                        Width="155"
                        DisplayMemberBinding="{Binding DateEnd,StringFormat='MM-dd-yyyy'}">
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <Border>
                                    <Border.Effect>
                                        <DropShadowEffect
                                            Color="White"
                                            Direction="270"
                                            ShadowDepth="1"
                                            BlurRadius="5"/>
                                    </Border.Effect>
                                    <Label Content="Ngày kết thúc"
                                       Padding="1"
                                       FontSize="15"
                                       Foreground="Black"
                                       FontWeight="Bold"/>
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                    </GridViewColumn>
                    <!--Cột Tên sự kiện-->
                    <GridViewColumn
                        Width="210"
                        DisplayMemberBinding="{Binding Name}">
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <Border>
                                    <Border.Effect>
                                        <DropShadowEffect
                                            Color="White"
                                            Direction="270"
                                            ShadowDepth="1"
                                            BlurRadius="5"/>
                                    </Border.Effect>
                                    <Label Content="Tên sự kiện"
                                       Padding="1"
                                       FontSize="15"
                                       Foreground="Black"
                                       FontWeight="Bold"/>
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                    </GridViewColumn>
                    <!--Cột Giảm giá-->
                    <GridViewColumn
                        Width="130"
                        DisplayMemberBinding="{Binding Sale}">
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <Border>
                                    <Border.Effect>
                                        <DropShadowEffect
                                            Color="White"
                                            Direction="270"
                                            ShadowDepth="1"
                                            BlurRadius="5"/>
                                    </Border.Effect>
                                    <Label Content="Giảm giá"
                                       Padding="1"
                                       FontSize="15"
                                       Foreground="Black"
                                       FontWeight="Bold"/>
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>

        </ListView>

        <!--Tỷ lệ giảm giá-->
        <TextBox Grid.Row="2" Grid.Column="1"
                 Width="150"
                 Margin="0,0,210,0"
                 materialDesign:HintAssist.Hint="Giảm giá (%)"
                 FontSize="15"
                 Background="Transparent"
                 FontFamily="Sitka Subheading"
                 FontWeight="Bold"
                 VerticalAlignment="Top"
                 IsReadOnly="False"
                 Text="{Binding Sale}"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Name="editSale"/>

        <!--Mua tặng-->
        <TextBox Grid.Row="2" Grid.Column="1"
                 Width="80"
                 Margin="60,0,0,0"
                 materialDesign:HintAssist.Hint="Mua"
                 FontSize="15"
                 Background="Transparent"
                 FontFamily="Sitka Subheading"
                 FontWeight="Bold"
                 VerticalAlignment="Top"
                 IsReadOnly="False"
                 Text="{Binding EventBuy}"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Name="editBuyGet_Buy"/>
        <TextBox Grid.Row="2" Grid.Column="1"
                 Width="80"
                 Margin="260,0,0,0"
                 materialDesign:HintAssist.Hint="Tặng"
                 FontSize="15"
                 Background="Transparent"
                 FontFamily="Sitka Subheading"
                 FontWeight="Bold"
                 VerticalAlignment="Top"
                 IsReadOnly="False"
                 Text="{Binding EventGet}"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Name="editBuyGet_Get"/>

        <!--Ngày bắt đầu-->
        <DatePicker Grid.Row="2"
            Width="175"
            Margin="15,50,0,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            FontSize="15"
            FontFamily="Sitka Subheading"
            FontWeight="Bold"
            IsEnabled="True"
            materialDesign:HintAssist.Hint="Ngày bắt đầu"
            Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
            SelectedDate="{Binding BeginDate}">
        </DatePicker>

        <!--Ngày kết thúc-->
        <DatePicker Grid.Row="2"
            Width="175"
            Margin="210,50,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="15"
            FontFamily="Sitka Subheading"
            FontWeight="Bold"
            IsEnabled="True"
            materialDesign:HintAssist.Hint="Ngày kết thúc"
            Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
            SelectedDate="{Binding DateEnd}">
        </DatePicker>

        <!--Button thêm mới-->
        <Button Grid.Column="1" Grid.Row="2" Command="{Binding AddCommand}"
                Width="80" Content="Thêm"
                FontWeight="Bold"
                Foreground="White"
                FontSize="15"
                Margin="165,0,305,85"
                VerticalAlignment="Bottom"
                Background="ForestGreen"
                FontFamily="Sitka Subheading"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Name="btnAddEvent">
        </Button>

        <!--Button xóa-->
        <Button Grid.Column="1" Grid.Row="2" Command="{Binding DeleteCommand}"
                Width="80" Content="Xóa"
                FontWeight="Bold"
                Foreground="White"
                FontSize="15"
                Margin="286,0,184,85"
                VerticalAlignment="Bottom"
                Background="ForestGreen"
                FontFamily="Sitka Subheading"
                IsEnabled="True"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Name="btnRemoveEvent">
        </Button>

        <!--Tên sự kiện-->
        <TextBox Grid.Row="2" Grid.Column="0"
                 Margin="15,0,15,20"
                 FontSize="15"
                 FontFamily="Sitka Subheading"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 TextAlignment="Left"
                 FontWeight="Bold"
                 VerticalAlignment="Top"
                 VerticalScrollBarVisibility="Auto"
                 IsReadOnly="False"
                 materialDesign:HintAssist.Hint="Tên sự kiện"
                 Text="{Binding EventName}"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Name="editEventName">
        </TextBox>

        <!--Progressbar loading-->
    </Grid>
</UserControl>
    
